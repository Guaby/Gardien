<div class="hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %} box ratio-container lazyload js call-to-action"
     {% if section.settings.image %}
     data-bgset="{% include 'bgset', image: section.settings.image %}"
     data-sizes="auto"
     data-parent-fit="cover"
     style="background-position: {{ section.settings.alignment }}; background-image: url('{{ section.settings.image | img_url: '300x300' }});"
     {% endif %}>
 
  <div class="hero__inner">
      <div class="page-width text-center">
        <div class="hero-content simple-content">
        {% if section.settings.title != blank %}
          <h2 class="h1 black mega-title action-title{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}">{{ section.settings.title | escape }}</h2>
        {% endif %}
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <!-- <a href="{{ section.settings.button_link }}" class="btn action__btn">
            {{ section.settings.button_label | escape }}
          </a> -->
          <!-- download buttons -->
          <a href="#" class="down apple">
            <img src="http://cdn.shopify.com/s/files/1/2122/5521/files/5847e95fcef1014c0b5e4822_200x200.png">
          </a>
          <a href="#" class="down android">
            <img src="http://cdn.shopify.com/s/files/1/2122/5521/files/en_badge_web_generic_200x200.png">
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<noscript>
  <div class="hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %}"{% if section.settings.image %} style="background-image: url('{{ section.settings.image | img_url: '2048x' }}'); background-position: center {{ section.settings.alignment }};"{% endif %}></div>
</noscript>

{% schema %}
  {
    "name": "My Call To Action",
    "class": "index-section index-section--flush",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Image alignment",
        "default": "center",
        "options": [
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "center",
            "label": "Middle"
          },
          {
            "value": "bottom",
            "label": "Bottom"
          }
        ]
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "My hero section"
      },
      {
        "type": "text",
        "id": "second_title",
        "label": "Second Heading",
        "default": "My hero section"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Use overlay text to give your customers insight into your brand. Select imagery and text that relates to your style and story.</p>"
      },
      {
        "type": "select",
        "id": "hero_size",
        "label": "Section height",
        "default": "medium",
        "options": [
          {
            "label": "Extra Small",
            "value": "x-small"
          },
          {
            "label": "Small",
            "value": "small"
          },
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          },
          {
            "label": "Extra Large",
            "value": "x-large"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_size",
        "label": "Text size",
        "default": "medium",
        "options": [
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          }
        ]
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "My Call To Action",
        "category": "Image"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
#shopify-section-call-to-action {
  padding: 0;
}
.call-to-action {
  min-height: 350px;
  background: transparent;
}
.black {
  color: black;
}
.action__btn  {
  color: white;
  background: #ee4640;
  background: -moz-linear-gradient(left, #ee4640 0%, #ec2d8b 100%);
  background: -webkit-linear-gradient(left, #ee4640 0%,#ec2d8b 100%);
  background: linear-gradient(to right, #ee4640 0%,#ec2d8b 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ee4640', endColorstr='#ec2d8b',GradientType=1 );
}
.action-title {
  margin-bottom: 20px !important;
}
.down {
  position: relative;
  display: inline-block;
  max-width: 180px;
}

{% endstylesheet %}

