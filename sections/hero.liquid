{% if template == 'index' %}
<style>
.flexit, .hero-btn-container {
  display: -webkit-flex;
  -webkit-align-items: center; /* Safari 7.0+ */
  display: flex;
  align-items: center;
}
.mega-title.hero_heading {
  width: 65%;
}
.mega-subtitle {
  margin:0;
}
.btn {
  border-radius: 5px;
}
.hero__btn {
  color: white;
  background: #ee4640; /* Old browsers */
  background: -moz-linear-gradient(left, #ee4640 0%, #ec2d8b 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(left, #ee4640 0%,#ec2d8b 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to right, #ee4640 0%,#ec2d8b 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ee4640', endColorstr='#ec2d8b',GradientType=1 ); /* IE6-9 */
}
.play-container, .circle {
  display: -webkit-flex;
 -webkit-justify-content: center;
  display: flex;
  justify-content: center;
  background: rgba(255, 255, 255, 0.33);
  border-radius: 50%;
  align-items: center;
}
.play-container {
  width: 150px;
  height: 150px;
  min-width: 150px;
  min-height: 150px;
}
.circle {
  width: 80px;
  height: 80px;
  background: rgba(255, 255, 255, 0.5);
}
.circle.mobile {
  background: transparent;
  margin-top: 23.5px;
  display: none;
}
.circle.mobile svg {
  width: 40px;
}
#heroVid {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(41, 41, 41, 0.78);
  z-index: 999;
  display: none;
  justify-content: center;
  align-items: center;
  padding: 0;
}
.video-inner {
  overflow: hidden;
  position: relative;
  width: 100%;
  height: 100%;
}
.exitBtn {
  position: absolute;
  width: 30px;
  height: 30px;
  background-image: url(//cdn.shopify.com/s/files/1/2122/5521/files/exit_d765658d-479a-4d45-939c-338944d82dea_medium.png);
  right: 10%;
  top: 110px;
  z-index: 9999;
  display: block;
  background-size: cover;
  background-repeat: no-repeat;
  cursor: pointer;
}
.myplay {
  fill: white !important;
}
  

@media only screen and (max-width: 1235px) {

  .hero_heading {
    width: 80% !important;
    font-size: 4em;
  }

}
@media only screen and (max-width: 935px) {

  .hero_heading {
    width: 100% !important;
  }

}

@media only screen and (max-width: 799px) {

  .play-container {
    display: none !important;
  }
  .circle.mobile {
    display: inherit;
  }

}

@media only screen and (max-width: 524px) {

  .hero_heading {
    font-size: 2.5em;
    margin: 10px 0 2px !important;
  }
  .hero__btn, .circle.mobile {
    margin-top: 0;
  }

}

@media only screen and (min-width: 750px) {

  .hero--x-large {
    height: 100vh;
    min-height: 775px;
  }

}
</style>
{% endif %}

<div class="hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %} box ratio-container lazyload js"
     {% if section.settings.image %}
     data-bgset="{% include 'bgset', image: section.settings.image %}"
     data-sizes="auto"
     data-parent-fit="cover"
     style="background-position: {{ section.settings.alignment }}; background-image: url('{{ section.settings.image | img_url: '300x300' }});"
     {% endif %}>
  {% if section.settings.image == blank %}
    <div class="placeholder-background">
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  {% endif %}
  <div class="hero__inner">
      <div class="page-width flexit"> <!-- text-center -->
        <div class="hero-content">
        {% if section.settings.text != blank %}
          <div class="rte-setting mega-subtitle{% if section.settings.text_size == 'large' %} mega-subtitle--large{% endif %}">{{ section.settings.text }}</div>
        {% endif %}
        {% if section.settings.title != blank %}
          <h2 class="h1 mega-title hero_heading{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}">{{ section.settings.title | escape }}</h2>
        {% endif %}
          <div class="hero-btn-container">
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="btn hero__btn">
            {{ section.settings.button_label | escape }}
          </a>
          <a class="circle mobile">
            <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
              viewBox="0 0 171 171" style="enable-background:new 0 0 171 171;" xml:space="preserve">
              <style type="text/css">
              .ply0{fill:#FFFFFF;}
              .ply1{fill:none;stroke:#FFFFFF;stroke-width:6;stroke-miterlimit:10;}
              </style>
              <g>
                <polygon class="ply0" points="108,85.9 91,95.7 74,105.5 74,85.9 74,66.3 91,76.1 	"/>
                <circle class="ply1" cx="85.5" cy="85.5" r="79"/>
              </g>
            </svg>
          </a>
        {% endif %}
          </div>
      </div>
      {% if template == 'index' %}
      <div class="play-container">
        <div class="circle">
          <a href="#">
            <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-play" viewBox="0 0 18 32">
              <style>
                .myplay {color: white}
              </style>
              <path class="myplay" d="M.263 0l17.071 15.944L.264 31.89" fill="#444" fill-rule="evenodd"/></svg>
          </a>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
   <div class="video-wrapper" id="heroVid">
    <div class="video-inner">
      <iframe class="myVideo" src="//www.youtube.com/embed/1qkSkOn4h-A?rel=0&amp;showinfo=0&amp;vq=720" width="850" height="480" frameborder="0" allowfullscreen=""></iframe>
      <span class="exitBtn"></span>
    </div>
  </div>
</div>


<noscript>
  <div class="hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %}"{% if section.settings.image %} style="background-image: url('{{ section.settings.image | img_url: '2048x' }}'); background-position: center {{ section.settings.alignment }};"{% endif %}></div>
</noscript>

