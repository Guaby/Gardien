{% stylesheet %}

.video-wrapper.video-on {
  display: flex !important;
}
.video-wrapper.video-off {
  display: none !important;
}
.btn[href="/products/product-one"] {
  background: #ee4640;
  background: -moz-linear-gradient(left, #ee4640 0%, #ec2d8b 100%);
  background: -webkit-linear-gradient(left, #ee4640 0%,#ec2d8b 100%);
  background: linear-gradient(to right, #ee4640 0%,#ec2d8b 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ee4640', endColorstr='#ec2d8b',GradientType=1 );
  color: white;
}

@media only screen and (max-width: 1370px) {

  .flexit {
    width: 80%;
  }

}

{% endstylesheet %}

{% javascript %}

$(function(){ 

  let iframe = $('iframe.myVideo');
  let videoInner = $('.video-inner');

  $('.circle').click(function() {
    $('#heroVid').removeClass('video-off').addClass('video-on');
    iframe.css('display', 'block');
    videoInner.append(iframe);
  });

  $('.exitBtn').click(function(e) {
    $('#heroVid').removeClass('video-on').addClass('video-off');
    iframe.attr('src', iframe.attr('src')).detach();
  });

});

{% endjavascript %}


