{% if template == 'product-alternate' %}
<style>
.flexit {
  display: -webkit-flex;
  -webkit-align-items: center; /* Safari 7.0+ */
  display: flex;
  align-items: center;
}
.mega-title.hero_heading {
  width: 65%;
}
.mega-subtitle {
  margin:0;
}
.btn {
  border-radius: 5px;
}
.hero__btn {
  color: white;
  background: #ee4640; /* Old browsers */
  background: -moz-linear-gradient(left, #ee4640 0%, #ec2d8b 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(left, #ee4640 0%,#ec2d8b 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to right, #ee4640 0%,#ec2d8b 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ee4640', endColorstr='#ec2d8b',GradientType=1 ); /* IE6-9 */
}


@media only screen and (min-width: 750px) {

  .hero--x-large {
    height: 100vh;
    min-height: 775px;
  }

}
</style>
{% endif %}

<div class="hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %} box ratio-container lazyload js"
     {% if section.settings.image %}
     data-bgset="{% include 'bgset', image: section.settings.image %}"
     data-sizes="auto"
     data-parent-fit="cover"
     style="background-position: {{ section.settings.alignment }}; background-image: url('{{ section.settings.image | img_url: '300x300' }});"
     {% endif %}>
  {% if section.settings.image == blank %}
    <div class="placeholder-background">
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  {% endif %}
  <div class="hero__inner">
      <div class="page-width flexit"> <!-- text-center -->
        <div class="hero-content product">
          <div class="product_hero_left">
          {% if section.settings.text != blank %}
            <div class="rte-setting mega-subtitle{% if section.settings.text_size == 'large' %} mega-subtitle--large{% endif %}">{{ section.settings.text }}</div>
          {% endif %}
          {% if section.settings.title != blank %}
            <h2 class="h1 mega-title hero_heading principal{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}">{{ section.settings.title | escape }}</h2>
          {% endif %}
          {% if section.settings.title != blank %}
          <h2 class="h1 mega-title hero_heading small-txt{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}">{{ section.settings.last_text | escape }}</h2>
          {% endif %}
          {% if section.settings.button_label != blank and section.settings.button_link != blank %}
            <a href="{{ section.settings.button_link }}" class="btn hero__btn product-btn">
              {{ section.settings.button_label | escape }}
            </a>
          {% endif %}
          </div>
          <div class="product_hero_right">
            <div class="product_image_hero_wrapper">
              <div class="product_image_hero"></div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>

<noscript>
  <div class="hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %}"{% if section.settings.image %} style="background-image: url('{{ section.settings.image | img_url: '2048x' }}'); background-position: center {{ section.settings.alignment }};"{% endif %}></div>
</noscript>

{% schema %}
  {
    "name": "Hero Product",
    "class": "index-section index-section--flush",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Image alignment",
        "default": "center",
        "options": [
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "center",
            "label": "Middle"
          },
          {
            "value": "bottom",
            "label": "Bottom"
          }
        ]
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Image with text overlay"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Use overlay text to give your customers insight into your brand. Select imagery and text that relates to your style and story.</p>"
      },
      {
        "type": "text",
        "id": "last_text",
        "label": "New Text",
        "default": "New text"
      },
      {
        "type": "select",
        "id": "hero_size",
        "label": "Section height",
        "default": "medium",
        "options": [
          {
            "label": "Extra Small",
            "value": "x-small"
          },
          {
            "label": "Small",
            "value": "small"
          },
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          },
          {
            "label": "Extra Large",
            "value": "x-large"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_size",
        "label": "Text size",
        "default": "medium",
        "options": [
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          }
        ]
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "hero product",
        "category": "Image"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
.mega-subtitle {
  margin:0;
}
.principal {
  font-size: 4.2em;
  margin: 10px 0 10px 0;
}
.product_image_hero {
  width: 600px;
  height: 430px;
  background-position: center center;
  background-image: url(https://cdn.shopify.com/s/files/1/2122/5521/files/phone_1822653f-5e74-40cc-beba-8e171450bcdc.png?v=1499207160);
  position: relative;
  top: 115px;
}
.hero-content.product {
  display: flex;
  justify-content:center;
  align-items: center;
}
.product_hero_left,
.product_hero_right {
  width: 50%;
}
.small-txt {
  font-size: 1.1em; 
  margin: 20px 0 0;
  line-height: 1.5em;
  width: 85%; 
}
.product-btn {
  background: white !important;
  color: #ee4640 !important; /* Old browsers */
  margin-top: 30px;
}

@media only screen and (max-width: 1039px) {

  .product_hero_left .hero_heading.principal  {
    font-size: 4em;
  }

}
@media only screen and (max-width: 994px) {

  .product_hero_left .hero_heading.principal  {
    font-size: 3.5em;
  }
  .product_image_hero {
    right: 90px;
  }

}
@media only screen and (max-width: 670px) {

  .product_image_hero {
    right: 200px !important;
  }

}
@media only screen and (max-width: 450px) {

  .product_image_hero {
    right: 300px !important;
  }

}


{% endstylesheet %}

